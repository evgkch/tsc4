(cell, cell, int) reverse_cell(cell c, cell prev, int bits) {
  slice s = prev.begin_parse();
  slice data = s.preload_bits(bits);
  if (~ s.slice_refs_empty?()) {
    return reverse_cell(prev, s~load_ref(), 1023);
  }
  if (prev.cell_null?()) {
    builder b' = begin_cell().store_slice(data);
    return (b'.end_cell(), prev, 0);
  }
  builder b' = begin_cell().store_slice(data).store_ref(prev);
  return (b'.end_cell(), prev, 0);
}

;; testable
(cell) find_and_replace(int flag, int value, cell linked_list) method_id {

  if (flag == value) {
    return linked_list;
  }

  slice s = linked_list.begin_parse();

  if (s.slice_empty?()) {
    return begin_cell().end_cell();
  }

  flag_len = ubit_size(flag);
  int value_len = ubit_size(value);

  mask = (1 << flag_len) - 1;
  chunk = 0;
  chunks = linked_list.cell_depth();
  dict = new_dict();
  matches = new_dict();
  offset = 0;
  count = 0;
  sc = 0;
  bc = 0;

  int max_safe_count = max(0, chunks * 1023 - flag_len);

  int work = -1;
  int target = 0;
  int prev = 0;
  int shift = 0;
  int index = 0;

  builder b = begin_cell();

  (work, s, target, shift) = s.ll_safe_shift(target, flag_len);

  while(work) {
    if (flag == target) {
      b = b.ll_store_uint(value, value_len);
      prev = target;
      (work, s, target, shift) = s.ll_safe_shift(target, flag_len);
    }
    else {
      shift = max((flag_len - ubit_size(target)), 1);
      b = b.ll_store_uint(target >> shift, shift);
      prev = target;
      (work, s, target, index) = s.ll_safe_shift(target, shift);
    }
  }

  if (index > 0) {
    b = b.ll_store_uint(target, index);
    bc = bc + index;
  }
  (cell c, _, _) = reverse_cell(null(), b.end_cell(), bc % 1024);
  return c;

}

