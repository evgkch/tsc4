;; @Return:
;; int work -1 | 0
;; int value
;; int skip
;; int len of skiped bits
;; slice s
(int, slice, int, int) ll_safe_shift(slice s, int prev, int shift) inline {
  int x = 0;
  int i = 0;
  while (i < shift) {
    if (~ s.slice_data_empty?()) {
      x = (x << 1) ^ s~load_uint(1);
      i += 1;
    }
    else {
      if (~ s.slice_refs_empty?()) {
        s = s~load_ref().begin_parse();
      }
      else {
        return (0, s, x, i);
      }
    }
  }
  sc = sc + shift;
  return (-1, s, ((prev << shift) ^ x) & mask, shift);
}

slice ll_skip_bits(slice s, int len) inline {
  int sc' = sc + len;
  int i = sc % 1024;
  int j = sc' % 1024;
  if (i < j) {
    s~skip_bits(len);
  }
  else {
    ;; s~skip_last_bits(); ??
    s = s~load_ref().begin_parse();
    s~skip_bits(j);
  }
  sc = sc';
  return s;
}

(int, slice) ll_safe_skip_bits(slice s, int len) inline {
  int i = 0;
  while (i < len) {
    if (~ s.slice_data_empty?()) {
      s~skip_bits(1);
      i += 1;
    }
    else {
      if (~ s.slice_refs_empty?()) {
        s = s~load_ref().begin_parse();
      }
      else {
        return (0, s);
      }
    }
  }
  return (-1, s);
}

int ll_preload_maybe_flag(slice s) inline {
  int sc' = sc + flag_len;
  int i = sc % 1024;
  int j = sc' % 1024;
  if (i < j) {
    return s.preload_uint(flag_len);
  }
  int n = 1023 - i;
  int m = flag_len - n;
  int u = (s.preload_uint(n) << m) & mask;
  int v = s.preload_ref().begin_parse().preload_uint(m);
  return u ^ v;
}

(int, int, int) ll_load_maybe_flag(slice s, int value, int shift) inline {
  int x = 0;
  int i = 0;
  while (i < flag_len) {
    if (~ s.slice_data_empty?()) {
      x = (x << 1) ^ s~load_uint(1);
      i += 1;
    }
    else {
      if (~ s.slice_refs_empty?()) {
        s = s~load_ref().begin_parse();
      }
      else {
        return (0, ((value << i) ^ x) & mask, value);
      }
    }
  }
  return (-1, ((value << shift) ^ x) & mask, value);
}

builder ll_store_uint(builder b, int value, int len) {
  int bc' = bc + len;
  int i = bc % 1024;
  int j = bc' % 1024;
  if (i < j) {
    b~store_uint(value, len);
  }
  else {
    int n = 1023 - i;
    int m = len - n;
    int u = value >> m;
    int v = value & ((1 << m) - 1);
    b~store_uint(u, n);
    builder b' = begin_cell()
      .store_ref(b.end_cell())
      .store_uint(v, m);
    b = b';
  }
  bc = bc';
  return b;
}

